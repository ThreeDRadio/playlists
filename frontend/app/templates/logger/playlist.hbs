<div class="container">

    <h1>Logging Sheet: {{ model.show.name }} <small>{{ model.date }} </small></h1>



    <table class="table table-striped table-condensed">

        <thead>
            <tr>
                <th>#</th><th>Artist</th><th>Track</th><th>Album</th><th>Duration</th><th>Local</th><th>Aus</th><th>Fem</th><th>NR</th>
            </tr>
        </thead>

        <tbody>
            {{#each model.tracks as |entryform| }}
            <tr>
                <td>{{ forloop.counter }}</td>
                <td>{{ entryform.artist }}</td>
                <td>{{ entryform.title }}</td>
                <td>{{ entryform.album }}</td>
                <td>{{ entryform.duration}}</td>
                <td>{{#if entryform.local }}<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>{{/if}} </td>
                <td>{{#if entryform.australian }}<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>{{/if }} </td>
                <td>{{#if entryform.female }}<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>{{/if }} </td>
                <td>{{#if entryform.newRelease }}<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>{{/if }} </td>
            </tr>
            {{/each }}
        </tbody>


    </table>

</div>

