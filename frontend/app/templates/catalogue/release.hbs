<h1 class="page-header">{{model.artist}} - {{model.title}}</h1>
<h4>
  <span class="label label-default">{{model.cpa}}</span>
{{#if model.isLocal}}
<span class="label label-success">{{model.isLocal}}</span>
{{/if}}

{{#if model.isFemale}}
<span class="label label-info">{{model.isFemale}}</span>
{{/if}}

{{#if model.demo}}
<span class="label label-default">Demo</span>
{{/if}}

{{#if model.isCompilation}}
<span class="label label-warning">Compilation</span>
{{/if}}
</h4>




<div class="row">
  <div class="col-sm-2">
<span class="album-art glyphicon glyphicon-cd"></span>
</div>

  <div class="col-sm-10">
<table class="table table-striped table-condensed">
  <thead>
    <tr>
        <th>Track</th>
        <th>Artist</th>
        <th>Title</th>
        <th>Length</th>
        <th align="center">Stream</th>
        <th align="center">Download</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.tracks as |track|}}
      <tr>
            <td>{{track.tracknum}}</td>
            {{#if track.trackartist}}
            <td>{{track.trackartist}}</td>
            {{else}}
            <td>{{model.artist}}</td>
            {{/if}}
            <td>{{track.tracktitle}}</td>
            <td>{{format-seconds track.tracklength}}</td>
            <td align="center"><span class="glyphicon glyphicon-play"></span></td>
            <td align="center"><span class="glyphicon glyphicon-download"></span></td>
        </tr>
    {{/each}}
  </tbody>
</table>
</div>

</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <strong>Release Details</strong>
  </div>
  <div  id="release-meta" class="panel-body">
    <dl class="dl-horizontal meta-list">
      <dt>ID Number</dt>   <dd>{{model.id}}</dd>
      <dt>Release Year</dt><dd>{{model.year}}</dd>
      <dt>Genre</dt>       <dd>{{model.genre}}</dd>
      <dt>Company</dt>     <dd>{{model.company}}</dd>
      <dt>Arrival Date</dt><dd>{{pretty-date model.arrivaldate}}</dd>
      <dt>Format</dt>      <dd>{{model.format}}</dd>
      <dt>Created by</dt>  <dd>{{model.id}}</dd>
    </dl>
  </div>
</div>

{{#if model.comments}}
<h2>Comments</h2>
{{#each model.comments as |comment|}}
<row>
  <div class="col-sm-2">
  </div>

  <div class="col-sm-10">
    {{comment.comment}}
  </div>
</row>
{{/each}}
{{/if}}
