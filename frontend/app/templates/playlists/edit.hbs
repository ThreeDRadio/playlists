<div class="container-fluid">

  <h1>Logging Sheet: {{ model.show.name }} <small>{{ model.date }} </small></h1>

  <div class="row">
  </div>

  <div class="modal fade" id="saveModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Submit Logging Sheet</h4>
        </div>
        <div class="modal-body">
          <p>Please ensure your logging sheet is complete and correct before submitting.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Continue Working</button>
          <input class="btn btn-primary" {{action "submitPlaylist"}} type="submit" name="final" value="Submit Logging Sheet">
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->

  <div class="modal fade" id="deleteModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Delete Track</h4>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this track?</p>
          <p><strong>{{deleteCandidate.artist}} - {{deleteCandidate.title}}</strong></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Keep Track</button>
          <input class="btn btn-primary" {{action "deleteTrack"}} type="submit" name="final" value="Delete Track">
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->

  <table class="table table-striped table-condensed floathead">

    {{playlist-table-header model=model}}

    {{playlist-edit-table-body model=model deleteAction=(action "confirmDelete")}}

    <tfoot>
        <tr><td colspan="10"><h4>Add New Track</h4></td></tr>
      <tr>
        <td>+</td>
        <td>{{input enter="submitTrack" class="form-control input-sm" id="new-track-artist-field" value=artist name="artist" placeholder="Artist"}}</td>
        <td>{{input enter="submitTrack" class="form-control input-sm" value=track name="track" placeholder="Track"}}</td>
        <td>{{input enter="submitTrack" class="form-control input-sm" value=album name="album" placeholder="Album"}}</td>
        <td align="right">{{input enter="submitTrack" class="form-control input-sm durationField" value=duration width="6" name="duration" placeholder="MM:SS"}}</td>
        <td align="center">
          {{input key-press="submitTrack" checked=local type="checkbox" name=local}}
        </td>
        <td align="center">{{input enter="submitTrack" checked=australian type="checkbox" name=australian}}</td>
        <td align="center">{{input enter="submitTrack" checked=female type="checkbox" name=female}}</td>
        <td align="center">{{input enter="submitTrack" checked=newRelease type="checkbox" name=newRelease}}</td>
        <td align="right">
          <button class="btn btn-xs btn-success btn-playlist-add" {{action "submitTrack"}}><span class="glyphicon glyphicon-plus"></span></button>
        </td>
      </tr>

    </tfoot>
  </table>
  {{#if errors }}
  <div class="alert alert-danger" role="alert"><b>Error:</b> Could not save track! Make sure you have entered an Artist, Track, and Album. If you entered a track duration, make sure it is formatted like this: MM:SS</div>
  {{/if}}
</div>

