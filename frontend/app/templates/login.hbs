<div class="container">
  <h1> Login</h1>
      {{#if errorMessage}}
      <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span> {{errorMessage}}
      </div>
      {{/if}}
  <form {{action 'authenticate' on='submit'}}>
    <div class="form-group">
      <label for="username">Username</label>
      {{input id="username" class="form-control" placeholder="Username" value=username}}
      <label for="password">Password</label>
      {{input id="password" class="form-control" type="password" placeholder="Password" value=password}}
    </div>
      <button type="submit" class="btn btn-default">Login</button>
  </form>
</div>
