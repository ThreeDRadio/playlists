<div class="container">
  <h1> Login</h1>
  {{#if errors.non_field_errors}}
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span> {{errors.non_field_errors}}
  </div>
  {{/if}}
    <div class="form-group">
      <label for="username">Username</label>
      <span class="text-danger">{{errors.username}}</span>
      {{input id="username" class="form-control" placeholder="Username" value=username action='authenticate'}}
      <label for="password">Password</label>
      <span class="text-danger">{{errors.password}}</span>
      {{input id="password" class="form-control" type="password" placeholder="Password" value=password action='authenticate'}}
    </div>
    <button {{action 'authenticate'}} class="btn btn-default">Login</button>
</div>
